<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name"
        style="@style/TextAppearance.App.TitleMedium"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/btnDecrease"
        android:textSize="23sp"/>

    <TextView
        android:id="@+id/tvItemDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 x $9.99 = $9.99"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_below="@id/tvItemName"
        android:layout_alignParentStart="true"/>

    <ImageButton
        android:id="@+id/btnDecrease"
        android:layout_width="32dp"
        android:layout_height="35dp"
        android:src="@android:drawable/arrow_down_float"
        android:layout_toStartOf="@id/tvQuantity"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_toStartOf="@id/btnIncrease"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/btnIncrease"
        android:layout_width="32dp"
        android:layout_height="35dp"
        android:src="@android:drawable/arrow_up_float"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"/>

</RelativeLayout>
